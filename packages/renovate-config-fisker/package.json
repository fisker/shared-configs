{
  "name": "renovate-config-fisker",
  "version": "1.0.3",
  "description": "fisker's Renovate shareable configuration",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/fisker/renovate-config-fisker.git"
  },
  "author": {
    "name": "fisker",
    "email": "lionkay@gmail.com"
  },
  "files": [],
  "license": "MIT",
  "scripts": {
    "build": "node ./scripts/build.js",
    "prettier": "prettier **/*.{js,json} --write",
    "npm-publish": "np --no-yarn --no-cleanup",
    "release": "npm-run-all build prettier npm-publish"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@xwtec/eslint-config": "^3.5.8",
    "cz-conventional-changelog-emoji": "^0.1.0",
    "eslint": "^5.14.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "markdownlint-cli": "^0.14.0",
    "np": "^4.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "bugs": {
    "url": "https://github.com/fisker/renovate-config-fisker/issues"
  },
  "homepage": "https://github.com/fisker/renovate-config-fisker#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-emoji"
    }
  },
  "readme": "ERROR: No README data found!",
  "renovate-config": {
    "default": {
      "extends": [
        "config:base",
        ":preserveSemverRanges",
        ":automergeRequireAllStatusChecks",
        ":automergePatch",
        ":disablePeerDependencies",
        ":timezone(Asia/Shanghai)"
      ],
      "lockFileMaintenance": {
        "enabled": true,
        "automerge": true,
        "schedule": "before 8am on Monday"
      },
      "schedule": ["before 8am"]
    }
  }
}
