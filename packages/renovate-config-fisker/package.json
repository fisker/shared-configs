{
  "name": "renovate-config-fisker",
  "version": "1.0.6",
  "description": "fisker's Renovate shareable configuration",
  "repository": {
    "type": "git",
    "url": "https://github.com/fisker/renovate-config-fisker.git"
  },
  "author": {
    "name": "fisker",
    "email": "lionkay@gmail.com"
  },
  "files": [],
  "license": "MIT",
  "scripts": {
    "build": "npm-run-all lint build:*",
    "build:js": "node ./scripts/build.js",
    "prettier": "prettier **/*.{md,js,json} --write",
    "test": "ava",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint **/*.js --fix",
    "lint:markdown": "markdownlint **/*.md --ignore node_modules/**",
    "release": "npm-run-all build prettier test semantic-release",
    "semantic-release": "npm-run-all release"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@xwtec/eslint-config": "^3.5.8",
    "ava": "^1.3.1",
    "cz-conventional-changelog-emoji": "^0.1.0",
    "eslint": "^5.14.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "markdownlint-cli": "^0.14.0",
    "np": "^4.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "semantic-release": "^15.13.3"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "bugs": {
    "url": "https://github.com/fisker/renovate-config-fisker/issues"
  },
  "homepage": "https://github.com/fisker/renovate-config-fisker#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-emoji"
    }
  },
  "renovate-config": {
    "default": {
      "description": "Default base configuration",
      "extends": [
        ":enableRenovate",
        ":ignoreModulesAndTests",
        ":preserveSemverRanges",
        ":separateMajorReleases",
        ":combinePatchMinorReleases",
        ":renovatePrefix",
        ":semanticPrefixChore",
        ":disablePeerDependencies",
        ":disableDigestUpdates",
        ":semanticPrefixFixDepsChoreOthers",
        ":rebaseStalePrs",
        ":unpublishSafe",
        ":prImmediately",
        ":prHourlyLimitNone",
        ":disableRateLimiting",
        ":automergeRequireAllStatusChecks",
        ":maintainLockFilesWeekly",
        ":ignoreUnstable",
        ":respectLatest",
        ":updateNotScheduled",
        ":npm",
        ":automergeLinters",
        ":doNotPinPackage",
        ":semanticCommits",
        ":timezone(Asia/Shanghai)",
        ":automergePatch"
      ],
      "ignorePresets": [],
      "devDependencies": {
        "automerge": true
      },
      "vulnerabilityAlerts": {
        "labels": ["security"],
        "assignees": ["@fisker"]
      },
      "schedule": ["after 5:30pm and before 5:30am"]
    }
  },
  "dependencies": {}
}
