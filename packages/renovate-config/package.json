{
  "name": "@fisker/renovate-config",
  "version": "1.0.3",
  "description": "fisker's Shareable Renovate Configuration",
  "repository": "fisker/shared-configs",
  "author": {
    "name": "fisker Cheung",
    "email": "lionkay@gmail.com",
    "url": "https://www.fiskercheung.com/"
  },
  "files": [],
  "license": "MIT",
  "scripts": {
    "build-package": "node -r esm ./scripts/build.js",
    "clean-package": "node -r esm ./scripts/clean.js",
    "version": "yarn build-package && git add package.json",
    "postversion": "yarn clean-package && git add package.json",
    "pretest": "yarn build-package && git add package.json",
    "posttest": "yarn clean-package && git add package.json",
    "test": "ava"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/fisker/shared-configs/issues"
  },
  "homepage": "https://github.com/fisker/shared-configs#readme",
  "devDependencies": {
    "read-pkg": "^5.0.0",
    "write-pkg": "^3.2.0"
  },
  "ava": {
    "require": "esm"
  },
  "dependencies": {
    "@fisker/eslint-config": "^1.0.5"
  },
  "renovate-config": {
    "default": {
      "description": "Default Configuration",
      "extends": [
        ":enableRenovate",
        ":ignoreModulesAndTests",
        ":preserveSemverRanges",
        ":separateMajorReleases",
        ":combinePatchMinorReleases",
        ":renovatePrefix",
        ":semanticPrefixChore",
        ":disablePeerDependencies",
        ":disableDigestUpdates",
        ":semanticPrefixFixDepsChoreOthers",
        ":rebaseStalePrs",
        ":unpublishSafe",
        ":prImmediately",
        ":prHourlyLimitNone",
        ":disableRateLimiting",
        ":automergeRequireAllStatusChecks",
        ":maintainLockFilesDisabled",
        ":ignoreUnstable",
        ":respectLatest",
        ":updateNotScheduled",
        ":npm",
        ":automergeLinters",
        ":doNotPinPackage",
        ":semanticCommits",
        ":timezone(Asia/Shanghai)",
        ":automergePatch"
      ],
      "ignorePresets": [],
      "devDependencies": {
        "automerge": true
      },
      "vulnerabilityAlerts": {
        "labels": [
          "security"
        ],
        "assignees": [
          "@fisker"
        ]
      },
      "schedule": [
        "after 5:30pm and before 5:30am"
      ]
    }
  }
}
