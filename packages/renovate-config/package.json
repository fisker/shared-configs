{
  "name": "@fisker/renovate-config",
  "version": "1.0.1",
  "description": "fisker's Shareable Renovate Configuration",
  "repository": "fisker/shared-configs",
  "author": {
    "name": "fisker Cheung",
    "email": "lionkay@gmail.com",
    "url": "https://www.fiskercheung.com/"
  },
  "files": [],
  "license": "MIT",
  "scripts": {
    "build": "run-p build:*",
    "build:package": "node -r esm ./scripts/build.js",
    "test": "ava"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/fisker/shared-configs/issues"
  },
  "homepage": "https://github.com/fisker/shared-configs#readme",
  "devDependencies": {
    "ava": "^1.4.1",
    "esm": "^3.2.22",
    "read-pkg": "^5.0.0",
    "write-pkg": "^3.2.0"
  },
  "ava": {
    "require": "esm"
  },
  "renovate-config": {
    "default": {
      "description": "Default Configuration",
      "extends": [
        ":enableRenovate",
        ":ignoreModulesAndTests",
        ":preserveSemverRanges",
        ":separateMajorReleases",
        ":combinePatchMinorReleases",
        ":renovatePrefix",
        ":semanticPrefixChore",
        ":disablePeerDependencies",
        ":disableDigestUpdates",
        ":semanticPrefixFixDepsChoreOthers",
        ":rebaseStalePrs",
        ":unpublishSafe",
        ":prImmediately",
        ":prHourlyLimitNone",
        ":disableRateLimiting",
        ":automergeRequireAllStatusChecks",
        ":maintainLockFilesDisabled",
        ":ignoreUnstable",
        ":respectLatest",
        ":updateNotScheduled",
        ":npm",
        ":automergeLinters",
        ":doNotPinPackage",
        ":semanticCommits",
        ":timezone(Asia/Shanghai)",
        ":automergePatch"
      ],
      "ignorePresets": [],
      "devDependencies": {
        "automerge": true
      },
      "vulnerabilityAlerts": {
        "labels": [
          "security"
        ],
        "assignees": [
          "@fisker"
        ]
      },
      "schedule": [
        "after 5:30pm and before 5:30am"
      ]
    }
  }
}
