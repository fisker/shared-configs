{
  "private": true,
  "name": "@fisker/shared-configs",
  "license": "MIT",
  "author": {
    "name": "fisker Cheung",
    "email": "lionkay@gmail.com",
    "url": "https://www.fiskercheung.com/"
  },
  "homepage": "https://github.com/fisker/shared-configs#readme",
  "repository": "fisker/shared-configs",
  "bugs": {
    "url": "https://github.com/fisker/shared-configs/issues"
  },
  "version": "0.0.0",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": []
  },
  "scripts": {
    "build": "lerna run build",
    "build:docs": "lerna run build:docs",
    "clean": "lerna run clean",
    "dist": "lerna publish",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint **/*.{js,mjs,vue}",
    "lint:markdown": "markdownlint **/*.md --ignore \"**/node_modules/**\"",
    "lint:prettier": "prettier **/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml} --check",
    "release": "run-s clean lint build test format dist",
    "test": "lerna run test",
    "dist:npm": "np --yolo --no-yarn",
    "format": "run-p format:*",
    "format:eslint": "yarn lint:eslint --fix",
    "format:prettier": "prettier **/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml} --write"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-emoji"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "8.0.0",
    "@self/commitlint-config": "npm:@fisker/commitlint-config@1.1.0",
    "@self/eslint-config": "npm:@fisker/eslint-config@1.2.5",
    "@self/husky-config": "npm:@fisker/husky-config@1.1.0",
    "@self/lint-staged-config": "npm:@fisker/lint-staged-config@1.0.4",
    "@self/prettier-config": "npm:@fisker/prettier-config@1.0.17",
    "ava": "2.2.0",
    "cz-conventional-changelog-emoji": "0.1.0",
    "eslint": "6.0.1",
    "esm": "3.2.25",
    "husky": "3.0.0",
    "lint-staged": "9.2.0",
    "markdownlint-cli": "0.17.0",
    "mem": "5.1.1",
    "npm-run-all": "4.1.5",
    "prettier": "1.18.2",
    "prettier-package-json": "2.1.0",
    "rimraf": "2.6.3",
    "rollup": "1.16.7",
    "write-prettier-file": "1.2.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "sideEffects": false
}
