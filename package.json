{
  "private": true,
  "name": "@fisker/shared-configs",
  "license": "MIT",
  "author": "fisker Cheung <lionkay@gmail.com> (https://www.fiskercheung.com/)",
  "homepage": "https://github.com/fisker/shared-configs#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fisker/shared-configs.git"
  },
  "bugs": {
    "url": "https://github.com/fisker/shared-configs/issues"
  },
  "version": "0.0.0",
  "workspaces": {
    "nohoist": [
      "**/@fisker/*"
    ],
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna run clean",
    "dist": "lerna publish",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint **/*.{js,mjs,vue} --fix",
    "lint:markdown": "markdownlint **/*.md --ignore \"**/node_modules/**\"",
    "release": "run-s clean build prettier lint test dist",
    "test": "lerna run test",
    "prettier": "prettier **/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml} --write"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-emoji"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@fisker/commitlint-config": "^1.0.2",
    "@fisker/eslint-config": "^1.0.7",
    "@fisker/lint-staged-config": "^1.0.1",
    "@fisker/prettier-config": "^1.0.11",
    "ava": "^1.4.1",
    "cz-conventional-changelog-emoji": "^0.1.0",
    "eslint": "^5.16.0",
    "esm": "^3.2.22",
    "husky": "^2.2.0",
    "lint-staged": "^8.1.5",
    "markdownlint-cli": "^0.15.0",
    "mem": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "prettier-package-json": "^2.1.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.11.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
