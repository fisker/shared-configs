{
  "private": true,
  "name": "@fisker/shared-configs",
  "license": "MIT",
  "author": "fisker Cheung <lionkay@gmail.com> (https://www.fiskercheung.com/)",
  "homepage": "https://github.com/fisker/shared-configs#readme",
  "repository": "fisker/shared-configs",
  "bugs": {
    "url": "https://github.com/fisker/shared-configs/issues"
  },
  "version": "0.0.0",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": []
  },
  "scripts": {
    "build": "lerna run build",
    "build:docs": "lerna run build:docs",
    "clean": "lerna run clean",
    "dist": "lerna publish",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint **/*.{js,mjs,vue} --fix",
    "lint:markdown": "markdownlint **/*.md --ignore \"**/node_modules/**\"",
    "release": "run-s clean lint build test prettier dist",
    "test": "lerna run test",
    "prettier": "prettier **/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml} --write"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-emoji"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@self/commitlint-config": "npm:@fisker/commitlint-config@^1.0.8",
    "@self/eslint-config": "npm:@fisker/eslint-config@^1.0.15",
    "@self/husky-config": "npm:@fisker/husky-config@^1.1.0",
    "@self/lint-staged-config": "npm:@fisker/lint-staged-config@^1.0.4",
    "@self/prettier-config": "npm:@fisker/prettier-config@^1.0.17",
    "ava": "^1.4.1",
    "cz-conventional-changelog-emoji": "^0.1.0",
    "eslint": "^5.16.0",
    "esm": "^3.2.25",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "markdownlint-cli": "^0.16.0",
    "mem": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.1",
    "prettier-package-json": "^2.1.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.13.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
