{
  "name": "@fisker/shared-configs",
  "version": "0.0.0",
  "private": true,
  "homepage": "https://github.com/fisker/shared-configs#readme",
  "bugs": {
    "url": "https://github.com/fisker/shared-configs/issues"
  },
  "repository": "fisker/shared-configs",
  "funding": "https://github.com/fisker/shared-configs?sponsor=1",
  "license": "MIT",
  "author": {
    "name": "fisker Cheung",
    "email": "lionkay@gmail.com",
    "url": "https://www.fiskercheung.com/"
  },
  "sideEffects": false,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "yarn workspaces foreach run build",
    "build:docs": "yarn workspaces foreach run build:docs",
    "clean": "yarn workspaces foreach run clean",
    "dist": "lerna publish",
    "format": "run-p \"format:*\"",
    "format:eslint": "yarn lint:eslint --fix",
    "format:markdown": "markdownlint-cli2-fix",
    "format:package-json": "sort-package-json \"package.json\" \"packages/*/package.json\"",
    "format:prettier": "yarn lint:prettier --write",
    "lint": "run-p \"lint:*\"",
    "lint:eslint": "eslint \"**/*.{js,jsx,mjs,cjs,vue}\"",
    "lint:markdown": "markdownlint-cli2",
    "lint:package-json": "yarn run format:package-json --check",
    "lint:prettier": "prettier . --check",
    "prepare": "husky install",
    "release": "run-s clean build format lint test dist",
    "test": "yarn workspaces foreach run test"
  },
  "devDependencies": {
    "@fisker/eslint-config": "workspace:*",
    "@fisker/husky-config": "4.1.2",
    "@fisker/lint-staged-config": "3.1.5",
    "@fisker/markdownlint-cli2-config": "workspace:*",
    "@fisker/prettier-config": "5.0.6",
    "ava": "5.3.1",
    "del-cli": "5.0.0",
    "eslint": "8.46.0",
    "esm-utils": "4.1.2",
    "husky": "8.0.3",
    "lerna": "7.1.4",
    "lint-staged": "13.2.3",
    "markdownlint-cli2": "0.8.1",
    "mem": "9.0.2",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.0",
    "prettier-format": "3.2.0",
    "rollup": "3.27.0",
    "sort-package-json": "2.5.1",
    "write-prettier-file": "3.0.1"
  },
  "packageManager": "yarn@3.6.1",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
