{
  "name": "@fisker/shared-configs",
  "repository": "fisker/shared-configs",
  "scripts": {
    "release": "run-s clean build prettier lint test dist",
    "clean": "lerna run clean",
    "build": "lerna run build",
    "test": "lerna run test",
    "dist": "lerna publish",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint **/*.{js,mjs,vue} --fix",
    "lint:markdown": "markdownlint **/*.md --ignore \"**/node_modules/**\"",
    "lint:style": "stylelint **/*.{css,scss,less} --fix",
    "prettier": "prettier **/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml} --write"
  },
  "private": true,
  "workspaces": [
    "packages/commitlint-config",
    "packages/eslint-config",
    "packages/eslint-config-legacy",
    "packages/eslint-config-vue",
    "packages/lint-staged-config",
    "packages/postcss-config",
    "packages/prettier-config",
    "packages/renovate-config",
    "packages/stylelint-config"
  ],
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@fisker/commitlint-config": "^1.0.1",
    "@fisker/eslint-config": "^1.0.4",
    "@fisker/lint-staged-config": "^1.0.0",
    "@fisker/prettier-config": "^1.0.5",
    "ava": "^1.4.1",
    "cz-conventional-changelog-emoji": "^0.1.0",
    "eslint": "^5.16.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "markdownlint-cli": "^0.15.0",
    "mem": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-emoji"
    }
  },
  "license": "MIT",
  "author": {
    "name": "fisker Cheung",
    "email": "lionkay@gmail.com",
    "url": "https://www.fiskercheung.com/"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {}
}
