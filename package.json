{
  "name": "@fisker/shared-configs",
  "version": "0.0.0",
  "private": true,
  "homepage": "https://github.com/fisker/shared-configs#readme",
  "bugs": {
    "url": "https://github.com/fisker/shared-configs/issues"
  },
  "repository": "fisker/shared-configs",
  "license": "MIT",
  "author": {
    "name": "fisker Cheung",
    "email": "lionkay@gmail.com",
    "url": "https://www.fiskercheung.com/"
  },
  "sideEffects": false,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "lerna run build",
    "build:docs": "lerna run build:docs",
    "clean": "lerna run clean",
    "dist": "lerna publish",
    "format": "run-p format:*",
    "format:eslint": "yarn lint:eslint --fix",
    "format:markdown": "yarn lint:markdown --fix",
    "format:package-json": "sort-package-json \"package.json\" \"packages/*/package.json\"",
    "format:prettier": "yarn lint:prettier --write",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint \"**/*.{js,mjs,vue}\"",
    "lint:markdown": "markdownlint \"**/*.md\" --ignore \"**/node_modules/**\"",
    "lint:package-json": "yarn run format:package-json --check",
    "lint:prettier": "prettier \"**/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml}\" --check",
    "release": "run-s clean build format lint test dist",
    "test": "lerna run test"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "12.0.1",
    "@fisker/commitlint-config": "1.3.2",
    "@fisker/eslint-config": "4.1.2",
    "@fisker/husky-config": "4.0.2",
    "@fisker/lint-staged-config": "3.0.2",
    "@fisker/prettier-config": "4.0.2",
    "@self/commitlint-config": "npm:@fisker/commitlint-config@1.3.2",
    "@self/husky-config": "npm:@fisker/husky-config@4.0.2",
    "@self/lint-staged-config": "npm:@fisker/lint-staged-config@3.0.2",
    "@self/prettier-config": "npm:@fisker/prettier-config@4.0.2",
    "ava": "3.15.0",
    "cz-conventional-changelog": "3.3.0",
    "del-cli": "3.0.1",
    "eslint": "7.23.0",
    "esm": "3.2.25",
    "husky": "5.2.0",
    "import-commonjs": "0.0.3",
    "lerna": "4.0.0",
    "lint-staged": "10.5.4",
    "markdownlint-cli": "0.27.1",
    "mem": "8.1.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "prettier-format": "2.0.2",
    "rollup": "2.43.1",
    "sort-package-json": "1.49.0",
    "write-prettier-file": "1.2.6"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
